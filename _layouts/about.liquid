---
layout: default
---

<!-- Clean Hero Section -->
<section class="hero-section" style="padding: 4rem 0 2rem 0; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
  <div class="container" style="max-width: 900px;">
    <div class="row align-items-center justify-content-center">
      <!-- Profile Image - Centered -->
      {% if page.profile.image %}
      <div class="col-md-4 text-center mb-4">
        <img src="{{ page.profile.image }}"
             class="img-fluid rounded-circle shadow"
             alt="Profile image"
             style="max-height: 250px; width: 250px; object-fit: cover; border: 4px solid white;">
      </div>
      {% endif %}
      
      <!-- Name and Title - Centered -->
      <div class="col-md-8 text-center">
        <h1 style="font-size: 2.8rem; font-weight: 300; margin-bottom: 0.5rem; color: #2c3e50;">
          {% if site.title == 'blank' %}
            <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
            {{ site.last_name }}
          {% else %}
            {{ site.title }}
          {% endif %}
        </h1>
        <p class="desc" style="font-size: 1.1rem; color: #6c757d; margin-bottom: 0;">
          {{ page.subtitle }}
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Main Content Container -->
<div class="container" style="max-width: 800px; margin: 0 auto; padding: 2rem 0;">
  <!-- Main About Content -->
  <article class="mb-5">
    <div class="clearfix" style="line-height: 1.7; font-size: 1.1rem;">
      {{ content }}
    </div>
  </article>

  <!-- News Section -->
  {% if page.news and site.announcements.enabled %}
    <section class="mb-5">
      <h2 style="border-bottom: 2px solid #dee2e6; padding-bottom: 0.5rem; color: #495057;">
        <a href="{{ '/news/' | relative_url }}" style="color: inherit; text-decoration: none;"> News </a>
      </h2>
      {% include news.liquid limit=true %}
    </section>
  {% endif %}

  <!-- Latest Posts -->
  {% if site.latest_posts.enabled %}
    <section class="mb-5">
      <h2 style="border-bottom: 2px solid #dee2e6; padding-bottom: 0.5rem; color: #495057;">
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit; text-decoration: none;"> Latest Posts </a>
      </h2>
      {% include latest_posts.liquid %}
    </section>
  {% endif %}

  <!-- Selected/Upcoming Papers -->
  {% if page.selected_papers %}
    <section class="mb-5">
      <h2 style="border-bottom: 2px solid #dee2e6; padding-bottom: 0.5rem; color: #495057;">
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit; text-decoration: none;"> Research Projects </a>
      </h2>
      <p class="mt-2">
        No publications yet, but working on:
        <ul>
          <li>Working Paper 1: Studying XX topic</li>
          <li>Working Paper 2: Analyzing YY phenomenon</li>
        </ul>
      </p>
    </section>
  {% endif %}

  <!-- Social Icons -->
  {% if page.social %}
  <section class="text-center social mt-5">
    <div class="contact-icons" style="font-size: 2.5rem;">
      {% include social.liquid %}
    </div>
    <div class="contact-note" style="margin-top: 1rem; color: #6c757d;">
      {{ site.contact_note }}
    </div>
  </section>
  {% endif %}
</div>
<!-- End .container -->